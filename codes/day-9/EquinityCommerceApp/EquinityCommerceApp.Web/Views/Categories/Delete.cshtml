@model CategoryModel
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Delete Category</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled/>
        </div>
        <button class="btn btn-danger" style="width:150px">Delete</button>
        &nbsp;&nbsp;
        <a asp-action="Index" asp-controller="Categories" class="btn btn-secondary" style="width:150px">Back To List</a>
    </div>
</form>

